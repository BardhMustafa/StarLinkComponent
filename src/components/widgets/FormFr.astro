const handleFormSubmit = async (event) => {
  event.preventDefault();

  // Get the form data
  const form = event.target;
  const formData = new FormData(form);

  try {
    // Send a POST request to the serverless function to send the email
    const response = await fetch('/api/send-email', {
      method: 'POST',
      body: formData,
    });

    if (response.ok) {
      // Show a success message if the email was sent successfully
      alert('Message sent successfully!');
    } else {
      // Show an error message if there was a problem sending the email
      alert('Failed to send message.');
    }
  } catch (error) {
    // Show an error message if there was a problem sending the request
    alert('Failed to send message.');
  }
};
