---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';

import { headerDataFrench, footerDataFrench } from '~/data';

import { MetaSEO } from '~/types';
import HeaderFr from '~/components/widgets/HeaderFr.astro';

export interface Props {
  meta?: MetaSEO;
}

const { meta } = Astro.props;
---

<Layout {meta}>
  <slot name="header">
    <HeaderFr {...headerDataFrench} isSticky showToggleTheme />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerDataFrench} />
  </slot>
</Layout>
